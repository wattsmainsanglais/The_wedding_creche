  <link rel="icon" href="/favicon.ico">
  <link rel="icon" href="/favicon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">

  <link rel="stylesheet" href="css/reset.css">
  <link rel="stylesheet" href="css/style.css">

</head>

<body>
  
  <div id="overlay">
    
    <nav>
      <h1>Nav bar</h1>
    </nav>
    
    <section id="splash">
      splash
    </section>

    <section id="about">
      about

    </section>

    <section id="gallery">
      <div class="gallery-wrap" >
        <img src="images/left-arrow.png" id="backBtn"> 
        
        <div class="gallery-container"> 
          <div class="gallery-scroll">  
            <span class="gallery-item">

              <img src= "https://unsplash.it/600/400?image=501" />
            </span>
            <span class="gallery-item">

              <img class="gallery-img" src= "https://unsplash.it/600/400?image=501" />
            </span>
          </div>
          <div class="gallery-scroll">  

            <span class="gallery-item">

              <img src= "https://unsplash.it/600/400?image=501" />
            </span>
            <span class="gallery-item">

              <img src= "https://unsplash.it/600/400?image=501" />
            </span>
          </div>
        </div> 
        
        <img src="images/right-arrow.png" id="nextBtn"> 
      </div>
    </section>

   
    <section id="reviews">

      reviews
    </section>

    <section id="contact">
      <div class="form-wrapper">
        <form id="contactForm">
          <h2>Please use this form to contact us</h2>

          <label for="name">Name</label><br>
          <input name="name" type="text" class="inputfield" required>
          <br>

          <label for="telephone">Telephone</label><br>
          <input name="telephone" type="number" class="inputfield" required>
          <br>

          <label for="email">Email</label><br>
          <input name="email" type="email" class="inputfield" required>
          <br>

          <label for="message">Message</label><br>
          <textarea class="inputfield" name="message" value="Please type your message here" cols="50" rows="15" required></textarea>
          <br>

          
        </form>
        <button type="submit" form="contactForm" value="submit">Submit</button>

      </div>
      
    </section>


    <footer>

      footer
    </footer>

   


    
  </div>
</body>

<script src="js/indexHtmlJs.js"></script>
</html>
